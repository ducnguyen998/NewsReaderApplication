<UserControl x:Class="NewsReaderSystem.UI.Elements.Figure"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewsReaderSystem.UI.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Image Source="{Binding Element.Image}"/>
            <TextBlock Text="{Binding Element.Title}" Foreground="White" FontSize="20" FontStyle="Italic" Margin="0,25"/>
        </StackPanel>
    </Grid>
</UserControl>
